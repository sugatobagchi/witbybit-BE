datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id           String    @id @default(cuid())
  name         String
  categoryId   String
  category     Category  @relation(fields: [categoryId], references: [id])
  brand        String
  image        String
  variants     Json
  combinations Json
  priceInr     Int
  discount     Discount?
}

model Category {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}

model Discount {
  id        String  @id @default(cuid())
  method    String
  value     Int
  product   Product @relation(fields: [productId], references: [id])
  productId String  @unique
}
